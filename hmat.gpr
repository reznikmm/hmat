project Hmat is

   for Source_Dirs use ("src");
   for Object_Dir use "obj";
   for Main use ("main.adb");

   package Compiler is
      for Switches ("ada") use ("-g", "-gnata", "--coverage", "-gnatwa");
   end Compiler;

   package Linker is
      for Switches ("ada") use ("--coverage");
   end Linker;

end Hmat;

